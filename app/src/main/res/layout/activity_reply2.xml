<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:isScrollContainer="true"

    android:background="#87000000">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        android:layout_centerInParent="true"
        android:layout_height="320dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:mContext=".ReplyVideoActivity">

            <qa.reweyou.in.qa.customview.TextViewCustomFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:layout_marginTop="12dp"
                android:text="Reply to this Question: "
                android:textColor="#424242"
                android:textSize="16dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="#24FF4081" />



            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#757575" />

            <Button
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:background="@drawable/edittext_back_post"
                android:text="POST"
                android:textColor="#fff"

                />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>