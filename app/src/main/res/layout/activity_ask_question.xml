<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87000000"

    android:isScrollContainer="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:mContext=".ReplyVideoActivity">

            <qa.reweyou.in.qa.customview.TextViewCustomFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:text="Ask your Question: "
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="#24FF4081"
                android:gravity="top"
                android:hint="Start writing here..."
                android:minLines="6"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:textColor="#212121"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:background="#2464DD17"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:textSize="16dp"
                    android:textStyle="bold"

                    android:text="#"
                    android:textColor="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/hashtag"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#2464DD17"
                    android:gravity="top"
                    android:hint="Give a Tag..."
                    android:maxLines="1"

                    android:paddingBottom="12dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:textColor="#212121"
                    android:textSize="14dp" />

            </LinearLayout>


            <Button
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittext_back_post"
                android:text="POST"
                android:textColor="#fff"

                />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>