<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect4"
    android:minHeight="48dp"
    android:orientation="horizontal"
    android:paddingBottom="4dp">

    <qa.reweyou.in.qa.customview.CircularImageView
        android:id="@+id/image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/download"
         />

    <qa.reweyou.in.qa.customview.TextViewCustomFont
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/image"
        android:text="Username"
        android:textColor="@color/colorPrimary"
        android:textSize="13dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@+id/image"
        android:autoLink="web"
        android:paddingRight="8dp"
        android:text="Hello World!"
        android:textColor="#78909C"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image"
        android:paddingRight="8dp"
        android:paddingTop="1dp"
        android:text="2 hr ago"
        android:textColor="@color/grey"
        android:textSize="11dp"
        android:textStyle="italic" />




    <qa.reweyou.in.qa.customview.TextViewCustomFont
        android:id="@+id/likenumber"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_toRightOf="@+id/reply"
        android:background="@drawable/ripple_effect2"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="0"

        android:textColor="#607D8B"
        android:textSize="12dp"
        android:textStyle="bold" />

    <qa.reweyou.in.qa.customview.TextViewCustomFont
        android:id="@+id/tempnum"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_toRightOf="@+id/likenumber"
        android:background="@drawable/ripple_effect2"
        android:paddingBottom="4dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="4dp"
        android:text="like"

        android:textColor="#607D8B"
        android:textSize="12dp"
        android:textStyle="bold" />

    <in.reweyou.reweyouforums.customView.TextViewCustomFont
        android:id="@+id/edit"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_toRightOf="@+id/tempnum"
        android:background="@drawable/ripple_effect2"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:text="EDIT"

        android:textColor="@color/red"
        android:textSize="12dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/templike"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_heart_like_alpha" />

    <ImageView
        android:id="@+id/like"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_heart_like_grey" />


</RelativeLayout>